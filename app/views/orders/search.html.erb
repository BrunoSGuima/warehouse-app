<h3> Resultados da Busca por: <%= @code %></h3>

<p><%= @orders.count %> <%= Order.model_name.human(count: @orders.count).downcase %> <%= I18n.translate :found, count: @orders.count %> </p>
<% @orders.each do |order| %>
      <dl>
      <dt> <%= Order.human_attribute_name(:code) %>:</dt>
      <dd><%= order.code %> </dd>
      <dt> <%= Order.human_attribute_name(:warehouse_id) %>:</dt>
    	<dd><%= order.warehouse.full_description %> </dd>
      <dt> <%= Order.human_attribute_name(:supplier_id) %>: </dt>
    	<dd><%= order.supplier.sup_description %> </dd> 
    </dl>
<% end %>



